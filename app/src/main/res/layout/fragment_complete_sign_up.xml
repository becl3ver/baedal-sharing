<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.fourfifths.android.baedalsharing.viewmodel.SignUpViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.fragment.CompleteSignUpFragment">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nicknameArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="12"
                android:hint="닉네임"
                android:text="@={viewModel.nickname}" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvNotice"
            android:text="@{viewModel.noticeText}"
            android:textColor="@{viewModel.noticeColor}"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etNickname"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/btnAccept"
            android:text="닉네임 설정"
            android:layout_margin="10dp"
            android:enabled="@{viewModel.acceptButton}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvNotice"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>