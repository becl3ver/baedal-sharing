<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaedalSharing" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>-->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MatchingMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">10dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/view_outlined_round_edge</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="fontFamily">@font/main_font</item>
    </style>

    <style name="ThinFontTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/secondary_font</item>
    </style>

    <style name="MainOutlineView">
        <item name="android:background">@drawable/view_outlined_round_edge</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="MainFillButton">
        <item name="android:background">@drawable/view_filled_round_edge</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/main_font</item>
    </style>

    <style name="Theme.BaedalSharing.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BaedalSharing.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BaedalSharing.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>